<!DOCTYPE html>
<html xmlns="">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    {% block stylesheets %}{% endblock %}

    {% block style %}
        {{ encore_entry_link_tags('addressbook') }}
    {% endblock style %}
</head>
<body>
<header class="mb-3">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ url('index') }}">{{ app_name }}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('index') }}">Contacts List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('contact_new') }}">Create contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="container">
    {% include "@App/inc/messages.html.twig" %}

    {% block body %}{% endblock %}
</main>

<footer class="footer mt-4">
    <div class="container">
        <span class="text-muted">{{ app_name }} &copy;  Copyright {{ "now"|date("Y") }}</span>
    </div>
</footer>


{{ encore_entry_script_tags('addressbook') }}
{% block javascripts %}
{% endblock %}
</body>
</html>
